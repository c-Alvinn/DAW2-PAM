    "/activity/{userId}": {
      "get": {
        "tags": [
          "Activity"
        ],
        "summary": "Retorna atividades de um usuário específico",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "ID do usuário para buscar atividades"
          }
        ],
        "responses": {
          "200": {
            "description": "OK. Retorna a lista de atividades do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "ID da atividade"
                      },
                      "description": {
                        "type": "string",
                        "description": "Descrição da atividade"
                      },
                      "category": {
                        "type": "string",
                        "description": "Categoria da atividade"
                      },
                      "user": {
                        "type": "string",
                        "description": "Nome do usuário associado à atividade"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found. Usuário não encontrado ou sem atividades"
          },
          "500": {
            "description": "Internal Server Error. Erro interno do servidor"
          }
        }
      }
